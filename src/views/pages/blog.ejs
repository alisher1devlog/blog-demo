<%- include('../partials/header') %>

<div class="page-content">
    <h1>Blog</h1>
    <p>Bu yerda texnologiya va dasturlash bo'yicha so'nggi maqolalarimni topishingiz mumkin.</p>
    <hr>

    <div class="article-list">
        <% if (typeof articles !== 'undefined' && articles.length > 0) { %>
            <% articles.forEach(article => { %>
                <article class="article-preview">
                    <h2>
                        <a href="/posts/<%= article.slug %>"><%= article.title %></a>
                    </h2>
                    <small class="article-meta">
                        Nashr qilindi: <%= new Date(article.createdAt).toLocaleDateString('uz-UZ', { dateStyle: 'long' }) %>
                    </small>
                    <a href="/posts/<%= article.slug %>" class="btn-readmore">To'liq o'qish &rarr;</a>
                </article>
            <% }) %>
        <% } else { %>
            <p>Hozircha hech qanday maqola nashr etilmagan.</p>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>